<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/popup_mark_shape">
    <TextView
        android:id="@+id/tv_point_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:theme="@style/tv_content_style"
        android:text="@string/none_text"
        android:layout_alignParentTop="true"/>
    <View
        android:id="@+id/break_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lime"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/tv_point_name"/>
    <TextView
        android:id="@+id/tv_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/tv_content_style"
        android:text="Profile: "
        android:gravity="left"
        android:layout_below="@id/break_line"/>
    <EditText
        android:id="@+id/et_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/tv_content_style"
        android:hint="@string/add_injury"
        android:layout_below="@id/tv_profile"/>
    <TextView
        android:id="@+id/tv_save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/tv_content_style"
        android:background="@drawable/tv_shape"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Save"/>
</RelativeLayout>