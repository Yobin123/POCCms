<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/iv_mark_front_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/front_body"
        android:visibility="visible"/>
    <ImageView
        android:id="@+id/iv_mark_back_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/back_body"
        android:visibility="invisible"/>
    <com.st.cms.widget.ImageLayout
        android:id="@+id/il_points_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        />
    <com.st.cms.widget.ImageLayout
        android:id="@+id/il_points_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_margin="@dimen/fab_switch_margin"
        android:src="@mipmap/flip_side"
        app:backgroundTint="@color/transparent"
        app:rippleColor="@color/transparent"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:visibility="visible"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:src="@mipmap/save"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:visibility="gone"/>
</android.support.design.widget.CoordinatorLayout>