<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_nric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:weightSum="3">

        <EditText
            android:id="@+id/et_personal_nric"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="NRIC"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@id/ll_nric"
        android:weightSum="3">

        <EditText
            android:id="@+id/et_personal_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="FIN/PASSPORT NO"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_personal_retrieve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:text="Retrieve personal data"
        android:textColor="#FFFFFD"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:textSize="14sp" />
</RelativeLayout>
